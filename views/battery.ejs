<!DOCTYPE html>
<html>
<head>
    <title>Visual-Enim | Battery Check</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body { margin: 0; font-family: 'Arial', sans-serif; background: white; overflow-x: hidden; }
        
        /* Navbar */
        nav { display: flex; align-items: center; padding: 20px 40px; border-bottom: 1px solid #eee; }
        .logo { font-weight: 900; font-size: 1.2rem; margin-right: 40px; }
        .nav-links a { text-decoration: none; color: #888; font-weight: 600; margin-right: 20px; transition: 0.3s; }
        .nav-links a:hover { color: black; }
        .nav-links a.active { color: black; border-bottom: 2px solid black; padding-bottom: 19px; }

        /* Grid Layout */
        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 30px; 
            padding: 0 40px 40px 40px; 
            max-width: 1200px; margin: 0 auto;
        }

        /* Style Kartu */
        .card {
            background: #e0e0e0; border-radius: 15px; padding: 20px;
            display: flex; flex-direction: column; justify-content: space-between;
            height: 180px; transition: 0.3s;
        }
        
        .card-header {
            display: flex; justify-content: space-between; align-items: center;
            border-bottom: 3px solid black; padding-bottom: 10px; margin-bottom: 10px;
        }
        .bat-name { font-weight: 800; font-size: 1.5rem; }
        .bat-status { font-weight: bold; font-size: 1rem; }
        .status-Charging { color: #ff8c00; }
        .status-Ready { color: black; }
        
        .percentage { font-size: 4rem; font-weight: 900; color: black; margin: 0; line-height: 1; }
        
        .card-footer { display: flex; justify-content: space-between; margin-top: auto; }
        .btn {
            border: none; padding: 10px 20px; border-radius: 30px;
            font-weight: 800; cursor: pointer; font-size: 0.9rem;
            color: white; background: black; transition: 0.2s;
        }
        .btn:hover { transform: scale(1.05); }

        /* --- MODAL POPUP (TENGAH LAYAR) --- */
        .modal-overlay {
            display: none; /* Default Sembunyi */
            position: fixed; /* Mengambang di atas layar */
            top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.6); /* Latar belakang gelap transparan */
            backdrop-filter: blur(4px); /* Efek blur kekinian */
            z-index: 9999; /* Pasti paling atas */
            justify-content: center;
            align-items: center;
        }
        
        /* Saat kelas 'active' ditambahkan lewat JS, ubah display jadi flex */
        .modal-overlay.active { display: flex; }

        .modal-box {
            background: white;
            padding: 30px;
            border-radius: 20px;
            width: 90%; max-width: 400px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            animation: popUp 0.3s ease-out;
        }

        @keyframes popUp {
            from { transform: scale(0.8); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }

        .modal-title { font-size: 1.5rem; font-weight: 800; margin-bottom: 20px; }
        
        .modal-input {
            width: 100%; font-size: 3rem; font-weight: 900; text-align: center;
            border: none; border-bottom: 4px solid black; outline: none;
            margin-bottom: 30px;
        }
        /* Hapus spinner input number */
        .modal-input::-webkit-inner-spin-button, 
        .modal-input::-webkit-outer-spin-button { -webkit-appearance: none; margin: 0; }

        .modal-buttons { display: flex; gap: 10px; justify-content: center; }
        
        .btn-confirm { background: black; color: white; width: 100%; padding: 15px; border-radius: 50px; font-size: 1.1rem; border:none; font-weight:bold; cursor: pointer; }
        .btn-cancel { background: #ddd; color: black; width: 100%; padding: 15px; border-radius: 50px; font-size: 1.1rem; border:none; font-weight:bold; cursor: pointer; }

    </style>
</head>
<body>

    <nav>
        <div class="logo">Visual-Enim</div>
        <div class="nav-links">
            <a href="/dashboard">Home</a>
            <a href="/battery" class="active">Battery Check</a>
            <a href="#">Schedule</a>
        </div>
    </nav>

    <% 
        const nxList = batteries.filter(b => b.name.includes('NX'));
        const a67List = batteries.filter(b => b.name.includes('A67'));
    %>

    <div class="grid-container" style="margin-top: 40px;">
        <% nxList.forEach(function(bat) { %>
            <div class="card" id="card-<%= bat.id %>">
                <div class="card-header">
                    <div class="bat-name"><%= bat.name %></div>
                    <div class="bat-status status-<%= bat.status %>"><%= bat.status %></div>
                </div>
                <div class="percentage" id="percent-text-<%= bat.id %>"><%= bat.percentage %>%</div>
                <div class="card-footer">
                    <button class="btn" onclick="toggleStatus(<%= bat.id %>, '<%= bat.status %>')">Charge</button>
                    <button class="btn" onclick="openModal(<%= bat.id %>, <%= bat.percentage %>, '<%= bat.name %>')">Update</button>
                </div>
            </div>
        <% }); %>
    </div>

    <div class="grid-container">
        <% a67List.forEach(function(bat) { %>
            <div class="card" id="card-<%= bat.id %>">
                <div class="card-header">
                    <div class="bat-name"><%= bat.name %></div>
                    <div class="bat-status status-<%= bat.status %>"><%= bat.status %></div>
                </div>
                <div class="percentage" id="percent-text-<%= bat.id %>"><%= bat.percentage %>%</div>
                <div class="card-footer">
                    <button class="btn" onclick="toggleStatus(<%= bat.id %>, '<%= bat.status %>')">Charge</button>
                    <button class="btn" onclick="openModal(<%= bat.id %>, <%= bat.percentage %>, '<%= bat.name %>')">Update</button>
                </div>
            </div>
        <% }); %>
    </div>

    <div class="modal-overlay" id="updateModal" onclick="closeModalOnOutside(event)">
        <div class="modal-box">
            <div class="modal-title" id="modalTitle">Update Battery</div>
            
            <input type="number" id="modalInput" class="modal-input" min="0" max="100">
            
            <div class="modal-buttons">
                <button class="btn-cancel" onclick="closeModal()">Cancel</button>
                <button class="btn-confirm" onclick="submitModal()">Save</button>
            </div>
        </div>
    </div>

    <script>
        // Variabel untuk menyimpan kita lagi ngedit baterai yang mana
        let currentEditId = null;

        // 1. BUKA MODAL
        function openModal(id, currentPercent, name) {
            currentEditId = id; // Simpan ID baterai yang lagi diedit
            
            const modal = document.getElementById('updateModal');
            const input = document.getElementById('modalInput');
            const title = document.getElementById('modalTitle');

            // Isi data ke modal
            title.innerText = "Update " + name;
            input.value = currentPercent;

            // Tampilkan Modal
            modal.classList.add('active');

            // Fokus ke input biar langsung ngetik
            setTimeout(() => {
                input.focus();
                input.select();
            }, 100);
        }

        // 2. TUTUP MODAL
        function closeModal() {
            const modal = document.getElementById('updateModal');
            modal.classList.remove('active');
            currentEditId = null;
        }

        // Tutup kalau klik area gelap di luar kotak
        function closeModalOnOutside(event) {
            if (event.target.id === 'updateModal') {
                closeModal();
            }
        }

        // 3. SIMPAN DATA
        async function submitModal() {
            if (!currentEditId) return;

            const input = document.getElementById('modalInput');
            const newPercent = input.value;

            if (newPercent === "" || isNaN(newPercent) || newPercent < 0 || newPercent > 100) {
                alert("Masukkan angka 0-100"); return;
            }

            try {
                // Update Tampilan Web Langsung (Biar cepet)
                document.getElementById(`percent-text-${currentEditId}`).innerText = newPercent + "%";
                
                // Tutup Modal
                closeModal();

                // Kirim ke Server
                const response = await fetch('/api/update-percent', {
                    method: 'POST', 
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id: currentEditId, percentage: newPercent })
                });

                if (!response.ok) throw new Error('Gagal');

            } catch (err) {
                alert("Error koneksi"); location.reload();
            }
        }

        // 4. LOGIKA CHARGE (Sama seperti sebelumnya)
        async function toggleStatus(id, currentStatus) {
            const response = await fetch('/api/toggle-status', {
                method: 'POST', headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: id, currentStatus: currentStatus })
            });
            const data = await response.json();
            if (data.success) location.reload();
        }
        
        // Tambahan: Bisa tekan Enter buat Save
        document.getElementById("modalInput").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                submitModal();
            }
        });

    </script>
</body>
</html>