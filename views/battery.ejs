<!DOCTYPE html>
<html>
<head>
    <title>Visual-Enim | Battery Check</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body { margin: 0; font-family: 'Arial', sans-serif; background: white; }
        
        /* Navbar sama seperti dashboard */
        nav { display: flex; align-items: center; padding: 20px 40px; border-bottom: 1px solid #eee; }
        .logo { font-weight: 900; font-size: 1.2rem; margin-right: 40px; }
        .nav-links a { text-decoration: none; color: #888; font-weight: 600; margin-right: 20px; }
        .nav-links a.active { color: black; border-bottom: 2px solid blue; padding-bottom: 21px; }

        /* Grid Layout */
        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px; padding: 40px; max-width: 1200px; margin: 0 auto;
        }

        /* Card Style */
        .card {
            background: #eee; border-radius: 15px; padding: 20px;
            position:RP; display: flex; flex-direction: column; justify-content: space-between;
            height: 180px; transition: 0.3s;
        }
        
        /* Header Card (Nama & Status) */
        .card-header {
            display: flex; justify-content: space-between; align-items: center;
            border-bottom: 2px solid black; padding-bottom: 10px; margin-bottom: 10px;
        }
        .bat-name { font-weight: 800; font-size: 1.2rem; }
        .bat-status { 
            font-weight: bold; font-size: 0.9rem; 
            background: white; padding: 2px 8px; border-radius: 4px; border: 1px solid #ccc;
        }

        /* Charging Style Dinamis */
        .status-Charging { color: orange; border-color: orange; }
        .status-Ready { color: black; }

        /* Percentage Besar */
        .percentage { font-size: 3.5rem; font-weight: 900; color: black; margin: 0; line-height: 1; }

        /* Tombol Bawah */
        .card-footer { display: flex; justify-content: space-between; margin-top: auto; }
        
        .btn {
            border: none; padding: 8px 16px; border-radius: 20px;
            font-weight: bold; cursor: pointer; font-size: 0.8rem;
            text-transform: uppercase; color: white;
        }
        .btn-charge { background: black; }
        .btn-update { background: black; }
        
        /* Animasi klik */
        .btn:active { transform: scale(0.95); }

    </style>
</head>
<body>

    <nav>
        <div class="logo">âš¡</div>
        <div class="nav-links">
            <a href="/battery" class="active">Battery Check</a>
            <a href="#">Schedule</a>
        </div>
    </nav>

    <div class="grid-container">
        <% batteries.forEach(function(bat) { %>
            <div class="card">
                <div class="card-header">
                    <div class="bat-name"><%= bat.name %></div>
                    <div class="bat-status status-<%= bat.status %>" id="status-text-<%= bat.id %>">
                        <%= bat.status %>
                    </div>
                </div>

                <div class="percentage" id="percent-text-<%= bat.id %>">
                    <%= bat.percentage %>%
                </div>

                <div class="card-footer">
                    <button class="btn btn-charge" onclick="toggleStatus(<%= bat.id %>, '<%= bat.status %>')">
                        Charge
                    </button>
                    <button class="btn btn-update" onclick="updatePercent(<%= bat.id %>)">
                        Update
                    </button>
                </div>
            </div>
        <% }); %>
    </div>

    <script>
        // Fungsi Update Persentase
        async function updatePercent(id) {
            const newPercent = prompt("Masukkan Persentase Baru (0-100):");
            if (newPercent !== null && newPercent !== "" && !isNaN(newPercent)) {
                
                // Update Tampilan Dulu (Biar cepet rasanya)
                document.getElementById(`percent-text-${id}`).innerText = newPercent + "%";

                // Kirim ke Database di belakang layar
                await fetch('/api/update-percent', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id: id, percentage: newPercent })
                });
            }
        }

        // Fungsi Toggle Charge/Ready
        async function toggleStatus(id, currentStatus) {
            // Kirim ke server minta ganti status
            const response = await fetch('/api/toggle-status', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: id, currentStatus: currentStatus })
            });
            
            const data = await response.json();
            
            if (data.success) {
                // Reload halaman otomatis supaya tombol status terupdate logikanya
                // (Cara paling aman biar tombolnya gk bingung status lama)
                location.reload(); 
            }
        }
    </script>
</body>
</html>